<UserControl x:Class="WPFUi.Views.PatientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFUi.Views"
             xmlns:controls="clr-namespace:WPFUi.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="230" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border BorderThickness="1" Grid.ColumnSpan="2" BorderBrush="Blue" />
                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <Button Style="{StaticResource MenuBarButton}" 
                            Content="Add"
                            />
                        <Button Style="{StaticResource MenuBarButton}" 
                            Content="Edit"
                            />
                        <Button Style="{StaticResource MenuBarButton}" 
                            Content="Delete"
                            IsEnabled="False"
                            />


                    </StackPanel>
                </Grid>

                <Border BorderThickness="1" Grid.Row="1" BorderBrush="Red">
                    <DataGrid ItemsSource="{Binding Patients}" 
                              CanUserAddRows="False" 
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              AutoGenerateColumns="False"
                              SelectionMode="Single"
                              IsReadOnly="True"
                              SelectedItem="{Binding SelectedPatient, Mode=OneWayToSource}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Last name" Binding="{Binding Path=LastName}" />
                            <DataGridTextColumn Header="First name" Binding="{Binding Path=FirstName}" />
                            <DataGridTextColumn Header="Address" Binding="{Binding Path=FullAddress}"/>
                            <DataGridTextColumn Header="Birth date" Binding="{Binding Path=BirthDateString}" />
                            <DataGridTextColumn Header="Phone number" Binding="{Binding Path=PhoneNumber}" />
                            <DataGridTextColumn Header="Email" Binding="{Binding Path=Email}" />
                            <DataGridTextColumn Header="Patient id" Binding="{Binding Path=Id}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
            <Grid Grid.Row="1" DataContext="{Binding SelectedPatient}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border BorderBrush="Black" BorderThickness="1" Grid.RowSpan="2" />

                <Grid Grid.Row="0">
                    <Grid.Background>
                        <LinearGradientBrush  StartPoint="0,0" EndPoint="1,1" >
                            <GradientStop Color="LightBlue" Offset="0.0" />
                            <GradientStop Color="WhiteSmoke" Offset="1.0" />
                        </LinearGradientBrush>
                    </Grid.Background>

                    <Border BorderBrush="Black" BorderThickness="1" />

                    <TextBlock Text="{Binding Path=FullName}" 
                           FontSize="20" 
                           VerticalAlignment="Center" 
                           Margin="20 0 0 0"/>

                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Border BorderBrush="Red" BorderThickness="1" />
                        <StackPanel Orientation="Vertical" Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Date of birth: " />
                                <TextBlock Text="{Binding Path=BirthDateString}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Address: " />
                                <TextBlock Text="{Binding Path=FullAddressWithPostCode}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Phone number: " />
                                <TextBlock Text="{Binding Path=PhoneNumber}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Email: " />
                                <TextBlock Text="{Binding Path=Email}" />
                            </StackPanel>

                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Border BorderBrush="Yellow" BorderThickness="1" />
                    </Grid>
                    <Grid Grid.Column="2">
                        <Border BorderBrush="Gray" BorderThickness="1" />
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <ContentControl Content="{Binding PatientFormViewModel}" />
    </Grid>
</UserControl>
