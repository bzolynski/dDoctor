<UserControl x:Class="WPFUi.Components.HomeMenuIconComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFUi.Components"
             x:Name="root"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.ContentTemplate>
        <DataTemplate>
            <Border Height="120" Width="120" Style="{StaticResource MainDarkBorder}" >
                <Button Background="Transparent"
                        Command="{Binding Command, ElementName=root}"
                        CommandParameter="{Binding CommandParameter, ElementName=root}">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Label, ElementName=root}" />
                    </StackPanel>
                </Button>
            </Border>
        </DataTemplate>
    </UserControl.ContentTemplate>
</UserControl>
