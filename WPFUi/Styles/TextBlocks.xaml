<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WPFUi.Styles">
    <Style x:Key="FormTextBlock" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style x:Key="BottomSectionOfPatientView" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource MediumBlueSolidColorBlush}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
</ResourceDictionary>